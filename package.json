  "type": "module",
  "types": "build/index.d.ts",
  "main": "build/index.cjs",
  "module": "build/index.js",
  "exports": {
    "require": "./build/index.cjs",
    "import": "./build/index.js"
  },
  "files": [
    "build",
    "src/combine.ts",
    "src/defer.ts",
    "src/queue.ts",
    "src/generatorify.ts",
    "src/index.ts"
  ],
  "scripts": {
    "build": "rm -rf build && inop src build -p -i __tests__  && tsc --declaration --emitDeclarationOnly",
